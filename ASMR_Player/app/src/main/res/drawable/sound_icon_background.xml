<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@integer/button_color_fade_time">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/backgroundIconPressedColor"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/backgroundIconColor"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>



